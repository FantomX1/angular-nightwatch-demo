{
  "src_folders": [
    "e2e-nightwatch/dist/tests"
  ],
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "",
  "globals_path": "",
  "output_folder": "e2e-nightwatch/reports",
  "selenium": {
    "start_process": true,
    "server_path": "e2e-nightwatch/bin/selenium.jar",
    "log_path": "e2e-nightwatch/selenium.log",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "e2e-nightwatch/bin/chromedriver"
    }
  },
  "test_settings": {
    "default": {
      "launch_url": "http://localhost:4200",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "request_timeout_options": {
        "timeout": 30000
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args": ["disable-gpu", "no-sandbox"]
        },
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
