{
  "src_folders": [
    "e2e-nightwatch/dist/tests"
  ],
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "",
  "globals_path": "",
  "output_folder": "e2e-nightwatch/reports",
  "selenium": {
    "start_process": false,
    "server_path": "e2e-nightwatch/bin/selenium.jar",
    "log_path": "e2e-nightwatch",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "e2e-nightwatch/bin/chromedriver"
    }
  },
  "test_settings": {
    "default": {
      "launch_url": "http://atlas:4200",
      "selenium_port": 4444,
      "selenium_host": "selenium",
      "silent": true,
      "request_timeout_options": {
        "timeout": 30000
      },
      "screenshots" : {
        "enabled" : true,
        "path" : "e2e-nightwatch/screenshots",
        "on_failure": true,
        "on_error": true
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args": ["disable-gpu", "no-sandbox", "verbose", "single-process", "headless"]
        },
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
